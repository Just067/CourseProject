<Window x:Class="CourseProject.Views.ChoiceWindows.SurnameChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SurnameChoiceWindow" Height="450" Width="800"
        FontSize="14"
        WindowStartupLocation="CenterScreen">

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
        <Label FontSize="20" FontWeight="Bold">Фамилия для запроса:</Label>
        <ComboBox Name="CbxSurname"
                  MinHeight="30" 
                  MinWidth="200" 
                  Margin="10" 
                  VerticalContentAlignment="Center"
                  FontSize="16"
                  FontFamily="Tahoma"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Выбрать" Margin="10" Width="150" Height="50" Background="LightGreen" Click="BtnSelect_Click"/>
            <Button Content="Отмена" Margin="10" Width="150" Height="50" Background="LightCoral" Click="BtnCancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
