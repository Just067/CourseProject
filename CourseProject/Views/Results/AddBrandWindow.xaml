<Window x:Class="CourseProject.Views.Results.AddBrandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.Views.Results"
        mc:Ignorable="d"
        Title="AddBrandWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
        <Label FontSize="20" FontWeight="Bold">Добавить марку автомобиля:</Label>
        <TextBox Name="TbxBrand"
                 MinHeight="30" 
                 MinWidth="200" 
                 Margin="10" 
                 VerticalContentAlignment="Center"
                 FontSize="16"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Добавить" Margin="10" Width="150" Height="50" Background="LightGreen" Click="BtnSelect_Click"/>
            <Button Content="Отмена" Margin="10" Width="150" Height="50" Background="LightCoral" Click="BtnCancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
