<Window x:Class="CourseProject.Views.Results.ResultQuery05Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ResultQuery05Window" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Padding="5" FontSize="12">
            Таблица <Underline>Query05</Underline>
        </TextBlock>
        <DataGrid AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Name ="DgQuery05">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ид." Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Фамилия и инициалы" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Паспорт" Binding="{Binding Passport}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount}"/>
                <DataGridTextColumn Header="Количество договоров" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="Сумма договоров" Binding="{Binding Sum}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
